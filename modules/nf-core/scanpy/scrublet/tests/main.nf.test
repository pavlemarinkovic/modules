nextflow_process {

    name "Test Process SCRUBLET"
    script "../main.nf"
    process "SCRUBLET"

    tag "modules"
    tag "modules_nfcore"
    tag "scanpy"
    tag "scanpy/scrublet"


    test("scrublet_normal") {

        when {
            process {
                """
                input_file_path = 'https://raw.githubusercontent.com/nf-core/test-datasets/scdownstream/samples/SAMN14430799_custom_emptydrops_filter_matrix.h5ad'

                input[0] = Channel.of([
                    [ id:'test' ],
                    file(input_file_path, checkIfExists: true)
                ])
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.h5ad).match("h5ad") },
                { assert snapshot(process.out.predictions).match("predictions") },
                { assert snapshot(process.out.versions).match("versions") }
            )
        }
    }
}
